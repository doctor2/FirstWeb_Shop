@model IEnumerable<Shop.Models.Computers>
<section class="content">
    <h2>Computers3</h2>
    <table cellpadding="4" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Images</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Customer</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="product" src="@Html.DisplayFor(modelItem => item.ImagesPath)" />  @*grid.Column(header: "Логотип", format: , canSort:false),*@
                </td>
                <td>
                    @item.Firm @*@Html.DisplayFor(modelItem => item.Firm)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Сharacteristics)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
            </tr>
        }
    </table>
</section>
