</head>
<body>
    <div class="body-content">
        <div class="contact">
            <div class="layout-positioner">
                <img class="product" src="~/Content/Images/shop.jpg" />
                <span>Контактная информация</span>
            </div>
        </div>
        <header>
            <nav class="animenu">
                <button class="animenu__toggle">
                    <span class="animenu__toggle__bar"></span>
                    <span class="animenu__toggle__bar"></span>
                    <span class="animenu__toggle__bar"></span>
                </button>
                <ul class="animenu__nav">
                    <li>
                        @Html.ActionLink("Главная", "Index", "Home")
                    </li>
                    <li>
                        <a href="#">Пробные страницы</a>
                        <ul class="animenu__nav__child">
                            <li>@Html.ActionLink("Фильтрация таблицы Ajax", "Computers", "Home")</li>
                            <li>@Html.ActionLink("Проверка чекбоксов", "Computers2", "Home")</li>
                            <li>@Html.ActionLink("Фильтрация из меню", "Computers3", "Home")</li>
                            <li>@Html.ActionLink("ComputersWebGrid", "ComputersWebGrid", "Home")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">Categories</a>
                        <ul class="animenu__nav__child">
                            <li><a href="">Sub Item 1</a></li>
                            <li><a href="">Sub Item 2</a></li>
                            <li><a href="">Sub Item 3</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
            </nav>
        </header>
        <section class="main">
            @RenderBody()

        </section>
        <footer>
            <hr />
            <div class="layout-positioner">
                <p>&copy; @DateTime.Now.Year - Made by Doctor</p>
            </div>
        </footer>
    </div>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/animenu.js"></script>

    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
</body>
</html>

